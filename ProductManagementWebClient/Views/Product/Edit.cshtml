@model BusinessObjects.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<!-- Validation Summary -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <!-- Hidden field for the Product ID -->
    <input type="hidden" asp-for="ProductId" />

    <!-- Product Name -->
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <!-- Category -->
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Select a Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Units in Stock -->
    <div class="form-group">
        <label asp-for="UnitsInStock" class="control-label"></label>
        <input asp-for="UnitsInStock" type="number" class="form-control" />
        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
    </div>

    <!-- Unit Price -->
    <div class="form-group">
        <label asp-for="UnitPrice" class="control-label"></label>
        <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
